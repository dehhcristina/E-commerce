<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>MarcaServlet</servlet-name>
        <servlet-class>web.MarcaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DepartamentoServlet</servlet-name>
        <servlet-class>web.DepartamentoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CategoriaServlet</servlet-name>
        <servlet-class>web.CategoriaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProdutoServlet</servlet-name>
        <servlet-class>web.ProdutoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ClienteServlet</servlet-name>
        <servlet-class>web.ClienteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PesquisarProdutosServlet</servlet-name>
        <servlet-class>web.PesquisarProdutosServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UmProdutoServlet</servlet-name>
        <servlet-class>web.UmProdutoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ComprarServlet</servlet-name>
        <servlet-class>web.ComprarServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MarcaServlet</servlet-name>
        <url-pattern>/marca</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DepartamentoServlet</servlet-name>
        <url-pattern>/departamento</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CategoriaServlet</servlet-name>
        <url-pattern>/categoria</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProdutoServlet</servlet-name>
        <url-pattern>/produto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClienteServlet</servlet-name>
        <url-pattern>/cliente</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PesquisarProdutosServlet</servlet-name>
        <url-pattern>/pesquisarProdutos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UmProdutoServlet</servlet-name>
        <url-pattern>/umProduto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ComprarServlet</servlet-name>
        <url-pattern>/comprar</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
